<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_HeaderCart>
            <version>1.0.0.0</version>
        </MageProfis_HeaderCart>
    </modules>
    <global>
        <helpers>
            <mpheadercart>
                <class>MageProfis_HeaderCart_Helper</class>
            </mpheadercart>
        </helpers>
        <models>
            <mpheadercart>
                <class>MageProfis_HeaderCart_Model</class>
            </mpheadercart>
        </models>
        <blocks>
            <mpheadercart>
                <class>MageProfis_HeaderCart_Block</class>
            </mpheadercart>
        </blocks>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <mageprofis_headercart_add_layout_updates>
                        <class>mpheadercart/observer</class>
                        <method>addLayoutXml</method>
                    </mageprofis_headercart_add_layout_updates>
                </observers>
            </core_layout_update_updates_get_after>
        </events>
    </global>

    <frontend>
        <routers>
            <mageprofis_headercart>
                <use>standard</use>
                <args>
                    <module>MageProfis_HeaderCart</module>
                    <frontName>header-cart</frontName>
                </args>
            </mageprofis_headercart>
        </routers>
        <translate>
            <modules>
                <MageProfis_HeaderCart>
                    <files>
                        <default>MageProfis_HeaderCart.csv</default>
                    </files>
                </MageProfis_HeaderCart>
            </modules>
        </translate>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <headercart translate="title" module="mpheadercart">
                                            <title>Header Cart</title>
                                        </headercart>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
